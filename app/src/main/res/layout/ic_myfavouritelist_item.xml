<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="5dp"
    android:background="@drawable/ic_item_recycler_view"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/userImagemyFavourite"
        android:src="@drawable/person"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/userImagemyFavourite"
        android:text="Work-Space Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/WorkspaceNameMyFavourite"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/WorkspaceNameMyFavourite"
        app:layout_constraintLeft_toRightOf="@id/userImagemyFavourite"
        android:text="Address"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#262626"
        android:textSize="18sp"
        android:id="@+id/WorkspaceAddressMyFavourite"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/WorkspaceAddressMyFavourite"
        app:layout_constraintLeft_toRightOf="@id/userImagemyFavourite"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/heart"
        android:id="@+id/favouriteButton"
        android:background="#e4e4e4"
        />
</android.support.constraint.ConstraintLayout>
