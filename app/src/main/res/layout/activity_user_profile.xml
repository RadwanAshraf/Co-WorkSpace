<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.radwan_pc.co_workspace.view.UserProfileActivity">
<include layout="@layout/toolbar_layout"
    android:id="@+id/toolbar"
    ></include>
        <ImageView
    android:layout_width="130dp"
    android:layout_height="130dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:src="@drawable/person"
    android:background="@drawable/ic_item_recycler_view"
    android:elevation="3dp"
    android:id="@+id/personImage"
    android:layout_marginTop="10dp"
    />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_camera"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/personImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/ChangeUserPhoto"
        app:layout_goneMarginTop="20dp"

        />

>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ChangeUserPhoto"
android:layout_marginTop="50dp"
        >

        <EditText
            android:id="@+id/ET_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:lines="1"
            android:pointerIcon="top_left_diagonal_double_arrow"
            android:inputType="text"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_layout_name"
        >

        <EditText
            android:id="@+id/ET_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="15dp"
            android:hint="Phone"
            android:textColor="@android:color/black"
            android:inputType="phone"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_layout_phone"
        >

        <EditText
            android:id="@+id/ET_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_address"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:id="@+id/input_layout_profileimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_layout_Email"
        >

        <EditText
            android:id="@+id/city_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="City"
            android:inputType="text"
            android:textColor="@android:color/black" />

    </android.support.design.widget.TextInputLayout>

<android.support.design.widget.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_goneMarginBottom="10dp"
    android:id="@+id/SaveBotton"
    android:src="@drawable/save"
    />

</android.support.constraint.ConstraintLayout>
